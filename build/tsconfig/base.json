{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["jest", "node", "react"]
  },
  "exclude": ["node_modules"],
  "include": ["../../src/*", "../../__tests__/**/*"]
}
